{
  "submodules": [
    "lib/FreeType",
    "lib/abseil-cpp",
    "lib/box2d",
    "lib/cubeb",
    "lib/googletest",
    "lib/harfbuzz",
    "lib/imgui",
    "lib/libpng",
    "lib/nanosvg",
    "lib/ogg",
    "lib/panini",
    "lib/variant",
    "lib/vorbis",
    "lib/zlib"
  ],
  "targets": {
    "osx/clang/debug": {
      "buildenv": "osx",
      "homebrew": {
        "formulae": ["cmake", "ninja", "pkg-config", "sdl2"]
      },
      "buildcmd": [
        "mkdir out",
        "cd out",
        "GENERATOR=Ninja ../tools/build.sh -DCMAKE_BUILD_TYPE=Debug -DUSE_HEIMDALL=1 -DUSE_PHYSICS=1"
      ]
    },
    "osx/clang/release": {
      "buildenv": "osx",
      "homebrew": {
        "formulae": ["cmake", "ninja", "pkg-config", "sdl2"]
      },
      "buildcmd": [
        "mkdir out",
        "cd out",
        "GENERATOR=Ninja ../tools/build.sh -DCMAKE_BUILD_TYPE=Release -DUSE_PHYSICS=1"
      ]
    }
  }
}
