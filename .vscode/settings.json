// Place your settings in this file to overwrite default and user settings.
{
  "editor.insertSpaces": true,
  "editor.rulers": [80, 100],
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.exclude": {
    "**/*.aps": true,
    "**/*.pyc": true,
    "**/*.sublime-workspace": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.suo": true,
    "**/.svn": true,
    "**/StyleCop.Cache": true,
    "**/bin": true,
    "**/obj": true,
    "lib/**/*.sln": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "[cmake]": {
    "editor.tabSize": 2
  },
  "[cpp]": {
    "editor.rulers": [80],
    "editor.tabSize": 4
  },
  "[csharp]": {
    "editor.tabSize": 4
  },
  "[java]": {
    "editor.tabSize": 4
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.insertSpaces": false,
    "editor.rulers": [80],
    "editor.quickSuggestions": false,
    "editor.wordWrap": "on"
  },
  "[objective-c]": {
    "editor.tabSize": 4
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[yaml]": {
    "editor.tabSize": 2
  },
  "json.schemas": [
    {
      "fileMatch": ["*.scene.json"],
      "url": "/js/rainbow-scene.schema.json"
    }
  ]
}
