{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://tido64.github.io/rainbow/rainbow-scene.schema.json",
  "title": "Scene",
  "type": "object",
  "definitions": {
    "AssetId": {
      "description": "Unique id used as reference by entities.",
      "type": "string",
      "minLength": 1
    },
    "Color": {
      "description": "Color",
      "type": "object",
      "required": ["r", "g", "b"],
      "properties": {
        "r": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255
        },
        "g": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255
        },
        "b": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255
        },
        "a": {
          "type": "integer",
          "minimum": 0,
          "maximum": 255
        }
      }
    },
    "SpriteId": {
      "type": "string",
      "minLength": 1
    },
    "TextureId": {
      "description": "Texture region id.",
      "type": "integer",
      "minimum": 0
    },
    "Vec2": {
      "description": "Vec2",
      "type": "object",
      "required": ["x", "y"],
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      }
    }
  },
  "required": ["assets", "entities"],
  "properties": {
    "assets": {
      "description": "Assets to be loaded before entities are created.",
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "additionalProperties": {
          "id": {
            "$ref": "#/definitions/AssetId"
          },
          "path": {
            "type": "string",
            "minLength": 1
          }
        },
        "anyOf": [
          {
            "description": "Font",
            "type": "object",
            "required": ["id", "path", "fontSize"],
            "properties": {
              "fontSize": {
                "type": "number",
                "exclusiveMinimum": 0
              }
            }
          },
          {
            "description": "TextureAtlas",
            "type": "object",
            "required": ["id", "path", "regions"],
            "properties": {
              "regions": {
                "description": "Texture regions can be referenced by array index.",
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {
                  "type": "array",
                  "minItems": 4,
                  "maxItems": 4,
                  "items": {
                    "type": "integer",
                    "minimum": 0
                  }
                }
              }
            }
          }
        ]
      }
    },
    "entities": {
      "description": "Entities to be created on load.",
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "additionalProperties": {
          "id": {
            "description": "Unique entity id.",
            "type": "string"
          }
        },
        "anyOf": [
          {
            "description": "Animation",
            "type": "object",
            "required": ["id", "sprite", "frames", "frameRate"],
            "properties": {
              "sprite": {
                "$ref": "#/definitions/SpriteId"
              },
              "frames": {
                "type": "array",
                "minItems": 2,
                "items": {
                  "$ref": "#/definitions/TextureId"
                }
              },
              "frameRate": {
                "type": "integer",
                "minimum": 1
              },
              "start": {
                "type": "boolean"
              }
            }
          },
          {
            "description": "Label",
            "type": "object",
            "required": ["id", "font", "text", "position"],
            "properties": {
              "font": {
                "$ref": "#/definitions/AssetId"
              },
              "text": {
                "type": "string"
              },
              "position": {
                "$ref": "#/definitions/Vec2"
              },
              "rotation": {
                "type": "number"
              },
              "scale": {
                "type": "number",
                "minimum": 0
              },
              "alignment": {
                "enum": ["left", "right", "center"],
                "type": "string"
              },
              "color": {
                "$ref": "#/definitions/Color"
              }
            }
          },
          {
            "description": "SpriteBatch",
            "type": "object",
            "required": ["id", "texture", "sprites"],
            "properties": {
              "texture": {
                "$ref": "#/definitions/AssetId"
              },
              "sprites": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "description": "Sprite",
                  "type": "object",
                  "required": ["id", "width", "height", "position", "texture"],
                  "properties": {
                    "id": {
                      "$ref": "#/definitions/SpriteId"
                    },
                    "width": {
                      "type": "integer",
                      "minimum": 1
                    },
                    "height": {
                      "type": "integer",
                      "minimum": 1
                    },
                    "position": {
                      "$ref": "#/definitions/Vec2"
                    },
                    "rotation": {
                      "type": "number"
                    },
                    "scale": {
                      "type": "number",
                      "minimum": 0
                    },
                    "pivot": {
                      "$ref": "#/definitions/Vec2"
                    },
                    "texture": {
                      "$ref": "#/definitions/TextureId"
                    },
                    "color": {
                      "$ref": "#/definitions/Color"
                    },
                    "mirrored": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        ]
      }
    }
  }
}
